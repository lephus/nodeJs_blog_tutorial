<div class="mt-4 container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name course</th>
                <th scope="col">Description</th>
                <th scope="col">Slug</th>
                <th scope="col">Create</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each course}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.name}}</td>
                <td>{{this.description}}</td>
                <td>{{this.slug}}</td>
                <td>{{this.createdAt}}</td>
                <td>
                    <a href="/course/update/{{this._id}}" class="btn btn-primary">Update</a>
                    <button type="button" class="btn btn-primary" data-id="{{this._id}}" data-toggle="modal" data-target="#confirm-delete">
  Delete
</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>    
</div>

{{!-- Confirm course delete --}}
<div id="confirm-delete" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">NOTIFICATION</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Are you sure delete course?</p>
      </div>
      <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            <button id="btn-delete-course" type="button" class="btn btn-primary">Delete</button>
      </div>
    </div>
  </div>
</div>

{{!-- DELETE HIDDEN FORM --}}
<form name="deleteForm" id="deleteForm" method="POST" action="/course/{{course._id}}?_method=DELETE"></form>

<script>
    document.addEventListener('DOMContentLoaded', function(){
        var CourseID;
        var deleteForm = document.forms['deleteForm'];
        $('#confirm-delete').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var id = button.data('id');
            CourseID = id;
            console.log(id);
        });
        var btnDeteleCourse = document.getElementById('btn-delete-course');
        btnDeteleCourse.onclick = function(){
            deleteForm.action = '/course/'+CourseID+'?_method=DELETE';
            deleteForm.submit();
        }
    });
</script>